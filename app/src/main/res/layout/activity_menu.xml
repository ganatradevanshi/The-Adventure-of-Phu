<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    tools:context=".activities.MenuActivity">

    <ImageView
        android:id="@+id/phuTheme"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/phusleepday" />

    <TextView
        android:id="@+id/textSound"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/joti_one"
        android:text="Sound"
        android:textSize="30dp" />

    <ToggleButton
        android:id="@+id/soundToggle"
        android:textOn=""
        android:textOff=""
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/button_sound_toggle" />

    <ImageView
        android:id="@+id/soundIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="345dp"
        android:src="@drawable/soundon" />

    <TextView
        android:id="@+id/textTheme"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/joti_one"
        android:text="Theme"
        android:textSize="30dp" />

    <ToggleButton
        android:id="@+id/themeToggle"
        android:textOn=""
        android:textOff=""
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_theme_toggle"/>

    <ImageView
        android:id="@+id/themeIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="460dp"
        android:src="@drawable/daysun" />

    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageViewPhu"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="558dp"
        android:background="@drawable/home"
        android:fontFamily="@font/joti_one"
        android:onClick="gameHomeClick" />

</RelativeLayout>
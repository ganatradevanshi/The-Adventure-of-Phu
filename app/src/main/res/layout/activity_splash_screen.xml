<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    tools:context=".activities.SplashScreenActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="373dp"
        android:layout_height="74dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/joti_one"
        android:text="The Adventure of Phu"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageViewCloud0"
        android:layout_width="1500dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/cloud4" />

    <ImageView
        android:id="@+id/imageViewCloud1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/cloud4" />

    <ImageView
        android:id="@+id/imageViewCloud2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/cloud5" />

    <ImageView
        android:id="@+id/imageViewCloud3"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/cloud5" />


    <ImageView
        android:id="@+id/imageViewPhu"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/phunew" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageViewPhu"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="258dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/play"
        android:onClick="gameStartClick" />

    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageViewPhu"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="157dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/menu"
        android:fontFamily="@font/joti_one"
        android:onClick="gameMenuClick" />

    <Button
        android:id="@+id/buttonScore"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageViewPhu"

        android:layout_alignParentEnd="true"

        android:layout_marginLeft="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/score"
        android:fontFamily="@font/joti_one"
        android:onClick="gameScoreClick" />

</RelativeLayout>
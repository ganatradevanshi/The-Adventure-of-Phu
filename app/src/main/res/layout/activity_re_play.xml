<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/replayScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    tools:context=".activities.RePlayActivity">

    <ImageView
        android:id="@+id/imageViewPhu"
        android:layout_marginLeft="79dp"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/phucrashed" />

    <TextView
        android:id="@+id/textSound"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/joti_one"
        android:text="GAME OVER"
        android:textSize="40dp" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="558dp"
        android:background="@drawable/restart"
        android:fontFamily="@font/joti_one"
        android:onClick="gameRestartClick" />

    <Button
        android:id="@+id/buttonScore"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="558dp"
        android:background="@drawable/score"
        android:fontFamily="@font/joti_one"
        android:onClick="gameScoreClick" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="558dp"
        android:background="@drawable/home"
        android:fontFamily="@font/joti_one"
        android:onClick="gameHomeClick" />

</RelativeLayout>